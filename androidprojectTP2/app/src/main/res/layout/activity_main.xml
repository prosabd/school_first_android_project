<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="411dp"
            android:layout_height="97dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom et prenom"
                android:id="@+id/textName"
        />
        <EditText
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nom et prenom"
                android:layout_marginLeft="20dp"
                android:id="@+id/editText"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="411dp"
            android:layout_height="97dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.122">
        <TextView
                android:text="checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textCheck"
        />
        <CheckBox
                android:text="Motorise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/checkBox"
                android:layout_marginLeft="50dp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="414dp"
            android:layout_height="64dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="30dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.25" android:id="@+id/linearLayout">
        <TextView
                android:text="Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textSeek"
        />
        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/seekBar" android:layout_weight="1"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
            android:text="0"
            android:layout_width="39dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/seekBarValue" android:layout_weight="1"
            app:layout_constraintVertical_bias="0.32" app:layout_constraintHorizontal_bias="0.54"/>
    <Button
            android:text="Passer params 1 "
            android:layout_width="277dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/btnParam1"
            app:layout_constraintVertical_bias="0.449"/>
    <Button
            android:text="Passer params 2 "
            android:layout_width="277dp"
            android:layout_height="54dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/btnParam2"
            tools:ignore="MissingConstraints"
            app:layout_constraintVertical_bias="0.528"/>

</androidx.constraintlayout.widget.ConstraintLayout>